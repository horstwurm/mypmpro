<div class="container">
  <div class="jumbotron">
    <h2>Willkommen bei <%= $app_name %></h2>
    <br>
      <%= image_tag("thurcloud.png", :size => "200x200") %>
      <br><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <white>
      <div class="form-group">
        <%= f.label I18n.t :email %>
        <%= f.email_field :email, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label I18n.t :password %>
        <% if @minimum_password_length %>
          <!--<em>(<% I18n.t @minimum_password_length %> =characters minimum)</em>-->
          <em> <%= I18n.t :charmin %> </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label I18n.t :passwordbestaetigen %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label I18n.t :lastname %>
        <%= f.text_field :lastname, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label I18n.t :name %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
         <%= f.label I18n.t :adresse %>
         <%= f.text_field :address1, class:"form-control" %>
         <%= f.text_field :address2, class:"form-control" %>
         <%= f.text_field :address3, class:"form-control" %>
      </div>
     <% @user.active = true %>
     <% @user.status = "OK" %>
     <% @user.anonymous = false %>
     <% @user.superuser = false %>
     <% @user.webmaster = false %>
     <%= f.hidden_field :active, class:"form-control" %>
     <%= f.hidden_field :status, class:"form-control" %>
     <%= f.hidden_field :anonymous, class:"form-control" %>
     <%= f.hidden_field :superuser, class:"form-control" %>
     <%= f.hidden_field :webmaster, class:"form-control" %>
      </white>
      <div class="actions">
            <%= f.submit (I18n.t :registrieren), class:"btn btn-primary btn-lg btn-download" %>
      </div>
    <% end %>
    <% render "devise/shared/links" %>
  </div>
</div>