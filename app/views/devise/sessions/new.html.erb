<br>
<div class="contact-form">
<div class="container">
    <div class="jumbotron">
    <h2><%= I18n.t :welcometo %></h2>
    <br>
      <%= image_tag("bg-banner02.jpg", :size => "200x200") %>
      <br><br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"contactForm") do |f| %>
      <%= devise_error_messages! %>
      <white>
      <div class="form-group">
        <i class="fa fa-envelope prefix"></i>
        <%= f.label I18n.t :email %>
        <%= f.email_field :email, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <i class="fa fa-lock prefix"></i>
        <%= f.label I18n.t :password %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <label class="checkbox-inline">
           <%= f.check_box :remember_me, class:"customcheck" %><%= I18n.t(:remember_me) %>
        </label>
      </div>
      </white>
      <div class="actions">
            <%= f.submit (I18n.t :anmelden), class:"btn btn-primary btn-lg btn-download" %>
            <%- if Devise.mappings[:user].recoverable? && controller_path != 'passwords' && controller_path != 'registrations' && $usemailgun %>
              <%= link_to(new_password_path(@devise_mapping.name)) do %>
          		  <i class="btn btn-primary btn-download btn-lg"><%= I18n.t :forgotpw %></i>
          		<% end %>
            <% end -%>
      </div>
    <% end %>
  </div>
</div>
</div>