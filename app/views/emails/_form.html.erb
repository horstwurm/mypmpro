<br>
<div class="contact-form">
    <div class="container"
    <div class="jumbotron">

    <%= form_for @email do |f| %>

        <% if @email.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@email.errors.count, "error") %> prohibited this calender from being saved:</h2>
              <ul>
                  <% @email.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

      <% @m_from = User.find(@email.m_from) %>
      <% @m_to = User.find(@email.m_to) %>

        <%= header("eMail an "+ @m_to.name + " " + @m_to.lastname) %>

        <div class="row">
          <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">'

                    <div class="form-group">
                      <%= f.label "Betreff" %><br/>
                      <%= f.text_field :header, autofocus: true, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Nachricht" %><br/>
                      <%= f.text_area :body, rows:5, class:"form-control"%>
                    </div>
                     <%= f.hidden_field :m_to, class:"form-control" %>
                     <%= f.hidden_field :m_from, class:"form-control" %>
                     <%= f.hidden_field :status, class:"form-control" %>
                     <%= f.hidden_field :back_url, class:"form-control" %>
                     <div class="actions">
                       <%= f.submit "Speichern",  class:"btn btn-primary btn-lg btn-download"%>
                      <%= link_to @email.back_url do %>
                        <i class="btn btn-primary btn-lg btn-download">Abbrechen</i>
                      <% end %>
                    </div>

          </div>
          <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">'
            <%= image_tag("email.jpg", class: "img-responsive") %>
          </div>
        </div>

    <% end %>                
